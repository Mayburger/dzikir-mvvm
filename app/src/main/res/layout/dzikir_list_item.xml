<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="item"
            type="com.nacoda.dzikir_mvvm.model.DzikirList.Dzikir" />

        <variable
            name="icon"
            type="android.graphics.drawable.Drawable" />

        <variable
            name="userActionListener"
            type="com.nacoda.dzikir_mvvm.mvvm.main.listener.DzikirListItemUserActionListener" />

    </data>

    <io.codetail.widget.RevealFrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:id="@+id/item_parent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_8dp"
                android:onClick="@{() -> userActionListener.onDzikirListClicked(item)}"
                android:orientation="horizontal"
                app:cardCornerRadius="@dimen/dimen_8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <android.support.v7.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dimen_16dp"
                        android:layout_marginLeft="@dimen/dimen_16dp"
                        android:layout_marginStart="@dimen/dimen_16dp"
                        android:layout_marginTop="@dimen/dimen_16dp"
                        app:cardCornerRadius="@dimen/dimen_8dp">

                        <ImageView
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:background="@color/colorImagePlaceholder"
                            android:padding="@dimen/dimen_4dp"
                            android:src="@{icon}" />

                    </android.support.v7.widget.CardView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dimen_16dp"
                        android:layout_marginStart="@dimen/dimen_16dp"
                        android:layout_marginTop="@dimen/dimen_40dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/comfortaa"
                            android:text="@{item.dzikirName}"
                            android:textColor="@color/dove_black"
                            android:textSize="@dimen/text_24sp" />


                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginBottom="@dimen/dimen_8dp"
                            android:layout_marginEnd="@dimen/dimen_16dp"
                            android:layout_marginRight="@dimen/dimen_16dp"
                            android:layout_marginTop="@dimen/dimen_8dp"
                            android:background="@color/lineGrey" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/comfortaa_light"
                            android:text="@{item.dzikirCount}"
                            android:textColor="@color/dove_black" />

                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>
        </FrameLayout>
    </io.codetail.widget.RevealFrameLayout>
</layout>